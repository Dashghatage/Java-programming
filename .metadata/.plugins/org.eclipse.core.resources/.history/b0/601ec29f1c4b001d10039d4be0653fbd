package practiccc;

import java.util.Scanner;

public class Tester {
	static void add()
	{
		System.out.println("it is addition");
	}
	static void mul()
	{
		System.out.println("it is multiplication");
	}
	static void sub()
	{
		System.out.println("it is substraction");
	}
public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter the option");
	int input=sc.nextInt();
	switch (input) {
	case 1:add();
		
		break;
case 2:mul();
		
		break;
case 3:sub();
	
	break

	default:System.out.println("invlid option");
		break;
	}
}
}
